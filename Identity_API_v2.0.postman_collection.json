		{
			"name": "Extensions",
			"description": "",
			"item": [
				{
					"name": "Show extension details",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"type": "text/javascript",
								"exec": "// Set the extension alias\npostman.setEnvironmentVariable(\"extension_alias\", \"SETME\");"
							}
						}
					],
					"request": {
						"url": "{{HOST}}:{{KEYSTONE_PORT}}/v2.0/extensions/{{extension_alias}}",
						"method": "GET",
						"header": [
							{
								"key": "X-Auth-Token",
								"value": "{{TOKEN}}",
								"description": ""
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"auth\": {\n        \"tenantName\": \"{{OS_TENANT_NAME}}\",\n        \"passwordCredentials\": {\n            \"username\": \"{{OS_USERNAME}}\",\n            \"password\": \"{{OS_PASSWORD}}\"\n        }\n    }\n}"
						},
						"description": "/v2.0/extensions/{alias}"
					},
					"response": []
				},
				{
					"name": "List extensions",
					"request": {
						"url": "{{HOST}}:{{KEYSTONE_PORT}}/v2.0/extensions",
						"method": "GET",
						"header": [
							{
								"key": "X-Auth-Token",
								"value": "{{TOKEN}}",
								"description": ""
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"auth\": {\n        \"tenantName\": \"{{OS_TENANT_NAME}}\",\n        \"passwordCredentials\": {\n            \"username\": \"{{OS_USERNAME}}\",\n            \"password\": \"{{OS_PASSWORD}}\"\n        }\n    }\n}"
