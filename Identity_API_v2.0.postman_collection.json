							"raw": "{\n    \"auth\": {\n        \"tenantName\": \"{{OS_TENANT_NAME}}\",\n        \"passwordCredentials\": {\n            \"username\": \"{{OS_USERNAME}}\",\n            \"password\": \"{{OS_PASSWORD}}\"\n        }\n    }\n}"
